GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="resume=/dev/mapper/vg0-swap rd.lvm.lv=vg0/root rd.lvm.lv=vg0/swap rhgb quiet fips=1 boot=UUID=9f196966-a695-4619-9ca6-7490b31a4233 page_poison=1 vsyscall=none slub_debug=P"
GRUB_DISABLE_RECOVERY="true"
GRUB_ENABLE_BLSCFG=true
kernel.randomize_va_space=2
